rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Allow anyone to create an activity (for magic link)
    // but only authenticated users to read/update/delete their own
    match /activities/{activityId} {
      allow create: if true;
      allow read, update, delete: if request.auth != null && request.auth.uid == resource.data.userId;
    }

    // Users can read/write their own user document
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // All users in the group can see each other's basic info
    // But this is open for now to allow fetching all users for the leaderboard
    match /users/{userId} {
        allow list: if request.auth != null;
    }
    
    // Group info can be read by any authenticated user
    match /groups/{groupId} {
        allow read: if request.auth != null;
        // Only owner can write, for future use
        allow write: if request.auth != null && request.auth.uid == resource.data.ownerId;
    }

    // Default deny all other reads/writes
    match /{document=**} {
      allow read, write: if false;
    }
  }
}

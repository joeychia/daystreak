
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Users can read all user profiles and the single group document
    // if they are authenticated.
    match /users/{userId} {
      allow read: if request.auth != null;
      allow create: if request.auth.uid == userId;
    }

    match /groups/{groupId} {
      allow read: if request.auth != null;
      // Allow system to create the default group. For user-based creation,
      // you would check if request.auth.uid == resource.data.ownerId
      allow write: if request.auth != null; 
    }

    // Users can read all activities for their group and create their own.
    match /activities/{activityId} {
      allow read: if request.auth != null;
      allow create: if request.auth.uid == request.resource.data.userId;
    }
  }
}

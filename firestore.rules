
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Users:
    // - Anyone can create a user document for themselves.
    // - Authenticated users can read any user document (for group display).
    // - Users can only update their own document.
    match /users/{userId} {
      allow create: if request.auth.uid == userId;
      allow read: if request.auth != null;
      allow update: if request.auth.uid == userId;
    }

    // Groups:
    // - Only one group exists, so no one can create or delete groups.
    // - Any authenticated user can read the single default group.
    match /groups/{groupId} {
      allow read: if request.auth != null && groupId == 'default-group';
      allow create, update, delete: if false;
    }

    // Workouts:
    // - Users can create a workout for themselves.
    // - Any authenticated user can read any workout (for calendar/leaderboard).
    match /workouts/{workoutId} {
      allow create: if request.auth.uid == request.resource.data.userId;
      allow read: if request.auth != null;
      allow update, delete: if false;
    }
  }
}

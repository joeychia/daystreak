rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Deny all reads and writes by default
    match /{document=**} {
      allow read, write: if false;
    }

    // Users can create and update their own profile
    match /users/{userId} {
      allow read: if request.auth != null;
      allow create: if request.auth.uid == userId;
      allow update: if request.auth.uid == userId;
    }

    // Workouts: User can create/read their own workouts
    match /workouts/{workoutId} {
      allow read: if request.auth.uid == resource.data.userId;
      allow create: if request.auth.uid == request.resource.data.userId;
    }
    
    // Group: Authenticated users can read the group, only system can update members
    match /groups/{groupId} {
        allow read: if request.auth != null;
        allow update: if request.auth != null; // Allow adding members
        allow create, delete: if false; // Nobody can create or delete groups
    }
  }
}
